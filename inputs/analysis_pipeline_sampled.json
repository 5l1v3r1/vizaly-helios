{
  "input":{
    "filetype":"HACC",
    "full":"/projects/groups/vizproject/dssdata/cosmo/Argonne_L360_HACC001/STEP499/m000.full.mpicosmo.499",
    "halo":"/projects/groups/vizproject/dssdata/cosmo/Argonne_L360_HACC001/analysis/Halos/b0168/STEP499/m000-499.haloparticles",
    "scalars":["x", "y", "z", "vx", "vy", "vz"]
  },
  "analysis":{
    "non-halos":{
      "extract": "yes",
      "output": "/projects/exasky_data/hoby/analysis/data-non-halo-raw-sampled-0.95",
      "sampling": 0.95
    },
    "entropy":{
      "num_bins": 4096,
      "logs": "logs/extract_non-halo",
      "plots": "entropy/distrib"
    }
  },
  "cbench":{
    "run-path":"build/",
    "input": "/projects/exasky_data/hoby/analysis/data-non-halo-raw-sampled-0.95",
    "output":{
      "dump": "/projects/exasky_data/hoby/analysis",
      "log": "compress_non-halo",
      "stats": "stats_non-halo-0.95"
    },
    "compressors":[
      {
        "name": "fpzip",
        "output-prefix": "data-non-halo-fpzip-sampled-0.95",
        "bits":26
      }
    ],
    "metrics":[
      { "name":"absolute_error" },
      { "name":"relative_error" },
      { "name":"mse" },
      { "name":"psnr" },
      { "name":"minmax" }
    ]
  },
  "merge": {
    "halos": "/projects/exasky_data/hoby/analysis/data-halo-sz",
    "non-halos":"/projects/exasky_data/hoby/analysis/data-non-halo-fpzip-sampled-0.95",
    "output": "/projects/exasky_data/hoby/analysis/data-combined-zip-sampled-0.95",
    "logs": "logs/merge.log"
  }
}
