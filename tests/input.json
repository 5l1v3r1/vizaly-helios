{
  "input": {
    "filetype": "HACC",
    "scalars": [ "x", "y", "z", "vx", "vy", "vz" ]
  },
  "compress": {
    "run-path":"build/",
    "input": "../tests/data.reduced.mpicosmo",
    "output": {
      "dump": "data",
      "log": "test",
      "stats": "stats_test"
    },
    "kernels": [
      {
        "name": "blosc",
        "prefix": "blosc_"
      },
      {
        "name": "sz",
        "prefix": "sz-pos-vel",
        "params": [
          { "scalar": [ "x", "y", "z" ], "abs": 1E-3 },
          { "scalar": [ "vx", "vy", "vz"], "pw_rel": 1E-2 }
        ]
      },
      {
        "name": "fpzip",
        "prefix": "fpzip-24bits",
        "bits": 24
      },
      {
        "name": "zfp",
        "prefix": "zfp-abs0.01",
        "abs": 1E-2
      }
    ],
    "metrics": [
      { "name": "absolute_error" },
      { "name": "relative_error" },
      { "name": "mean_square_error" },
      { "name": "psnr" }
    ]
  },
  "noising": {
    "type": "gaussian",
    "input": "../tests/data.reduced.mpicosmo",
    "output":"../tests/data-full-noised",
    "d_min": -0.5,
    "d_max":  0.5,
    "logs": "logs/log_noising",
    "plots": "noise_distrib"
  }
}

